<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="vOpenTalkie.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="vOpenTalkie"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry
                x:Name="streamName"
                Text="Stream1"
                MaxLength="16"
                Placeholder="Stream name"
                
                FlexLayout.Grow="1.0"
                HorizontalTextAlignment="Center"
            />

            <FlexLayout JustifyContent="Center" Wrap="Wrap" Direction="Column" AlignItems="Stretch">
                <Label HorizontalTextAlignment="Center"
                    Text="Sample rate"
                />
                <Picker
                    x:Name="sampleRate"
                    FlexLayout.Grow="1.0"
                    HorizontalTextAlignment="Center"
                />
            </FlexLayout>

            <FlexLayout JustifyContent="Center" Wrap="Wrap" Direction="Column" AlignItems="Stretch">
                <Label HorizontalTextAlignment="Center"
                    Text="Channel type"
                />
                <Picker
                    x:Name="channelType"
                    FlexLayout.Grow="1.0"
                    HorizontalTextAlignment="Center"
                />
            </FlexLayout>

            <FlexLayout JustifyContent="Center" Wrap="Wrap" Direction="Column" AlignItems="Stretch">
                <Label HorizontalTextAlignment="Center"
                    Text="Microphone type"
                />
                <Picker
                    x:Name="microphone"
                    FlexLayout.Grow="1.0"
                    SelectedIndex="0"
                    HorizontalTextAlignment="Center"
                />
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceBetween" Wrap="Wrap" AlignItems="Stretch">
                <Entry x:Name="address" 
                       Placeholder="IP Address" 
                       HorizontalTextAlignment="Center" 
                       FlexLayout.Grow="1.0"
                />

                <Entry x:Name="port" 
                       Placeholder="Port" 
                       HorizontalTextAlignment="Center" 
                       FlexLayout.Grow="0.5"
                       Keyboard="Numeric"
                       MaxLength="5"
                />
            </FlexLayout>


            <Button
                x:Name="StartStreamBtn"
                Text="Start stream" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill"
            />

            <Button LineBreakMode="CharacterWrap" BackgroundColor="DarkKhaki"
                x:Name="batteryOptimizationBtn"
                Text="For better app experience, please, disable battery optimization"
                Clicked="batteryOptimizationBtn_Clicked"
            />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
