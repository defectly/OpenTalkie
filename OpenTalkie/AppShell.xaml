<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OpenTalkie.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:OpenTalkie.View"
    Title="OpenTalkie"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="Streams" Icon="streams.png">
            <ShellContent ContentTemplate="{DataTemplate view:StreamsPage}" Route="StreamsPage" />
        </Tab>
        <Tab Title="Mic Settings" Icon="mic.png">
            <ShellContent ContentTemplate="{DataTemplate view:MicSettingsPage}" Route="MicSettingsPage" />
        </Tab>
    </TabBar>
</Shell>
