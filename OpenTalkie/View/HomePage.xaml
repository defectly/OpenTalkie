<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OpenTalkie.View.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="16">
    <ScrollView>
        <Grid
            RowDefinitions="Auto,Auto,Auto,*"
            RowSpacing="16"
            VerticalOptions="Center">

            <!--  mic service button  -->
            <Button
                Grid.Row="0"
                Padding="16,12"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                Command="{Binding SwitchMicrophoneBroadcastCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Fill"
                HeightRequest="56"
                Shadow="{StaticResource MaterialShadowDark}"
                Text="{Binding MicrophoneBroadcastButtonText}"
                TextColor="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource PrimaryDarkText}}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsMicrophoneActive}" Value="True">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ServiceRunningLight}, Dark={StaticResource ServiceRunningDark}}" />
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnServiceRunningLight}, Dark={StaticResource OnServiceRunningDark}}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <!--  playback service button  -->
            <Button
                Grid.Row="1"
                Padding="16,12"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                Command="{Binding SwitchPlaybackBroadcastCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Fill"
                IsVisible="{Binding IsPlaybackAvailable}"
                HeightRequest="56"
                Shadow="{StaticResource MaterialShadowDark}"
                Text="{Binding PlaybackBroadcastButtonText}"
                TextColor="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource PrimaryDarkText}}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsPlaybackActive}" Value="True">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ServiceRunningLight}, Dark={StaticResource ServiceRunningDark}}" />
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnServiceRunningLight}, Dark={StaticResource OnServiceRunningDark}}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <!--  receiver button  -->
            <Button
                Grid.Row="2"
                Padding="16,12"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                Command="{Binding SwitchReceiverCommand}"
                CornerRadius="8"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Fill"
                HeightRequest="56"
                Shadow="{StaticResource MaterialShadowDark}"
                Text="{Binding ReceiverButtonText}"
                TextColor="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource PrimaryDarkText}}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding IsReceiverActive}" Value="True">
                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ServiceRunningLight}, Dark={StaticResource ServiceRunningDark}}" />
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OnServiceRunningLight}, Dark={StaticResource OnServiceRunningDark}}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <!--  ip addresses  -->
            <Grid
                Grid.Row="3"
                RowDefinitions="Auto,Auto,*"
                RowSpacing="10"
                VerticalOptions="End">

                <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Available networks"
                    TextColor="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}" />

                <CollectionView Grid.Row="1" ItemsSource="{Binding NetworkAddresses}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,4"
                                Padding="12"
                                BackgroundColor="{StaticResource CardBackground}"
                                CornerRadius="8">
                                <Label
                                    FontSize="14"
                                    Text="{Binding .}"
                                    TextColor="{StaticResource OnSurfaceVariantDark}" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button
                    Grid.Row="2"
                    Padding="16,8"
                    BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryContainerLight}, Dark={StaticResource SecondaryContainerDark}}"
                    Command="{Binding RefreshNetworkAddressesCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="Refresh"
                    TextColor="{AppThemeBinding Light={StaticResource OnSecondaryLight}, Dark={StaticResource OnSecondaryDark}}"
                    VerticalOptions="End" />
            </Grid>
        </Grid>
    </ScrollView>

    <ContentPage.Resources>
        <Shadow
            x:Key="MaterialShadowDark"
            Brush="#80FFFFFF"
            Opacity="0.2"
            Radius="4"
            Offset="0,2" />
    </ContentPage.Resources>
</ContentPage>
