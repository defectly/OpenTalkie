<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="OpenTalkie.View.Popups.ErrorPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Color="Transparent">
    <Grid HorizontalOptions="Fill" VerticalOptions="Fill" Padding="24">

        <Frame
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20"
            CornerRadius="12"
            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}">
            <Grid RowDefinitions="Auto,Auto" RowSpacing="16" MaximumWidthRequest="360">
                <Label
                    Grid.Row="0"
                    FontSize="16"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    LineBreakMode="WordWrap"
                    Text="{Binding Message}"
                    TextColor="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}" />
                <Button
                    Grid.Row="1"
                    Padding="16,10"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    Command="{Binding CloseCommand}"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    FontSize="16"
                    MinimumHeightRequest="44"
                    Text="OK"
                    HorizontalOptions="Center"
                    WidthRequest="120"
                    TextColor="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource PrimaryDarkText}}" />
            </Grid>
        </Frame>
    </Grid>
</toolkit:Popup>
