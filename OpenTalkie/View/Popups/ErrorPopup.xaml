<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="OpenTalkie.View.Popups.ErrorPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Color="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}">
    <Grid
        Padding="16"
        HorizontalOptions="Center"
        MaximumWidthRequest="300"
        RowDefinitions="*,Auto"
        RowSpacing="16"
        VerticalOptions="Center">
        <Grid.Resources>
            <Shadow
                x:Key="MaterialShadowDark"
                Brush="#80FFFFFF"
                Opacity="0.2"
                Radius="4"
                Offset="0,2" />
        </Grid.Resources>

        <Label
            Grid.Row="0"
            FontSize="16"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="{Binding Message}"
            TextColor="{AppThemeBinding Light={StaticResource OnSurfaceLight}, Dark={StaticResource OnSurfaceDark}}"
            VerticalOptions="Center" />

        <Button
            Grid.Row="1"
            Padding="16,8"
            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
            Command="{Binding CloseCommand}"
            CornerRadius="8"
            FontAttributes="Bold"
            FontSize="16"
            MinimumHeightRequest="48"
            Shadow="{StaticResource MaterialShadowDark}"
            Text="OK"
            TextColor="{AppThemeBinding Light={StaticResource OnPrimaryLight}, Dark={StaticResource PrimaryDarkText}}" />
    </Grid>
</toolkit:Popup>
