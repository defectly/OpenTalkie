<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OpenTalkie.View.StreamsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:OpenTalkie.ViewModel">
    <Grid RowDefinitions="Auto, *">
        <!--  Вкладки с RadioButton  -->
        <HorizontalStackLayout
            Grid.Row="0"
            Padding="10"
            Spacing="10">
            <RadioButton
                BackgroundColor="{Binding IsMicrophoneTabSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Blue,Gray'}"
                CheckedChanged="OnTabCheckedChanged"
                Content="Microphone Streams"
                GroupName="StreamTabs"
                IsChecked="{Binding IsMicrophoneTabSelected}"
                TextColor="White" />
            <RadioButton
                BackgroundColor="{Binding IsPlaybackTabSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Blue,Gray'}"
                CheckedChanged="OnTabCheckedChanged"
                Content="Playback Streams"
                GroupName="StreamTabs"
                IsChecked="{Binding IsPlaybackTabSelected}"
                TextColor="White" />
        </HorizontalStackLayout>

        <!--  Содержимое  -->
        <ScrollView Grid.Row="1">
            <StackLayout>
                <!--  Microphone Streams  -->
                <AbsoluteLayout
                    BackgroundColor="LightBlue"
                    BindingContext="{Binding MicrophoneStreamsViewModel}"
                    IsVisible="{Binding IsMicrophoneTabSelected}">
                    <CollectionView
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        ItemsSource="{Binding MicrophoneStreams}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" />
                                        <Label Text="{Binding Hostname}" />
                                        <Switch IsToggled="{Binding IsEnabled}" />
                                        <HorizontalStackLayout Spacing="10">
                                            <Button
                                                Command="{Binding OpenSettingsCommand}"
                                                CommandParameter="{Binding}"
                                                Text="Открыть" />
                                            <Button
                                                BackgroundColor="Red"
                                                Command="{Binding DeleteStreamCommand}"
                                                CommandParameter="{Binding}"
                                                Text="Удалить"
                                                TextColor="White" />
                                        </HorizontalStackLayout>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button
                        AbsoluteLayout.LayoutBounds="0.95,0.95,AutoSize,AutoSize"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        BackgroundColor="Blue"
                        Command="{Binding AddStreamCommand}"
                        CornerRadius="25"
                        FontSize="Large"
                        HeightRequest="50"
                        Text="+"
                        TextColor="White"
                        WidthRequest="50" />
                </AbsoluteLayout>

                <!--  Playback Streams  -->
                <AbsoluteLayout
                    BackgroundColor="LightGreen"
                    BindingContext="{Binding PlaybackStreamsViewModel}"
                    IsVisible="{Binding IsPlaybackTabSelected}">
                    <CollectionView
                        AbsoluteLayout.LayoutBounds="0,0,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        ItemsSource="{Binding PlaybackStreams}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame>
                                    <StackLayout>
                                        <Label Text="{Binding Name}" />
                                        <Label Text="{Binding Hostname}" />
                                        <Switch IsToggled="{Binding IsEnabled}" />
                                        <HorizontalStackLayout Spacing="10">
                                            <Button
                                                Command="{Binding OpenSettingsCommand}"
                                                CommandParameter="{Binding}"
                                                Text="Открыть" />
                                            <Button
                                                BackgroundColor="Red"
                                                Command="{Binding DeleteStreamCommand}"
                                                CommandParameter="{Binding}"
                                                Text="Удалить"
                                                TextColor="White" />
                                        </HorizontalStackLayout>
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button
                        AbsoluteLayout.LayoutBounds="0.95,0.95,AutoSize,AutoSize"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        BackgroundColor="Blue"
                        Command="{Binding AddStreamCommand}"
                        CornerRadius="25"
                        FontSize="Large"
                        HeightRequest="50"
                        Text="+"
                        TextColor="White"
                        WidthRequest="50" />
                </AbsoluteLayout>
            </StackLayout>
        </ScrollView>
    </Grid>

    <ContentPage.Resources>
        <toolkit:BoolToObjectConverter
            x:Key="BoolToColorConverter"
            FalseObject="Gray"
            TrueObject="Blue" />
    </ContentPage.Resources>
</ContentPage>