<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OpenTalkie.Views.StreamSettingsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OpenTalkie.Views"
    xmlns:vm="clr-namespace:OpenTalkie.ViewModels">

    <ContentPage.BindingContext>
        <vm:StreamSettingsViewModel />
    </ContentPage.BindingContext>

    <!--<ListView HasUnevenRows="True" ItemsSource="{Binding Settings}">
